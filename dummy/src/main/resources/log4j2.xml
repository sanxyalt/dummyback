<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR"> <!-- status is HOW to show log4j 2 internal errors -->
    <Appenders>
        <!-- Console Appender: logs messages to the console -->
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!-- File Appender: logs messages to a file -->
        <File name="FileAppender" fileName="logs/application.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

        <!-- Rolling File Appender: creates a new log file after a size threshold is reached -->
        <RollingFile name="RollingFileAppender" fileName="logs/rolling-application.log"
                     filePattern="logs/rolling-application-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB"/>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Root Logger: defines the default logging level and attaches appenders -->
        <Root level="info">
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="RollingFileAppender"/>
        </Root>

    </Loggers>
</Configuration>